{
  "name": "rest-api-node",
  "version": "1.0.0",
  "description": "A simple REST API made using Node.js, TypeScript, Express, and MongoDB",
  "main": "src/server.ts",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon --config nodemon.json src/server.ts",
    "compile": "npx tsc",
    "lint": "npx eslint . --ext .ts",
    "lint:fix": "npx eslint . --ext .ts --fix",
    "prettier:format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "test": "npx jest --coverage"
  },
  "author": "Victoria Miltcheva",
  "license": "ISC",
  "devDependencies": {
    "@jest-mock/express": "^1.4.5",
    "@types/config": "^0.0.41",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.13",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "eslint": "^8.8.0",
    "jest": "^27.4.7",
    "nodemon": "^2.0.15",
    "npm": "^8.4.0",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0"
  },
  "dependencies": {
    "config": "^3.3.7",
    "express": "^4.17.2",
    "mongoose": "^6.1.8",
    "typescript": "^4.5.5"
  }
}
